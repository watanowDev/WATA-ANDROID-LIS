<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#777777">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#777777">
            <TextView
                android:id="@+id/statusQR"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="QR"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#993300"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/statusTOF"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="TOF"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#993300"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/statusDIS"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="DIS"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#993300"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/statusRFID"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="RFID"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#993300"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/statusNET"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="NET"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#993300"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/statusBAT"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="BAT"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#993300"
                android:layout_margin="2dp"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#777777">

            <TextureView
                android:id="@+id/rawData"
                android:layout_width="240dp"
                android:layout_height="320dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"/>


            <com.budiyev.android.codescanner.CodeScannerView
                android:id="@+id/scanner_view"
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:visibility="visible"
                app:autoFocusButtonColor="@android:color/white"
                app:autoFocusButtonVisible="false"
                app:flashButtonColor="@android:color/white"
                app:flashButtonVisible="false"
                app:frameAspectRatioHeight="1.7"
                app:frameAspectRatioWidth="1"
                app:frameColor="@android:color/white"
                app:frameCornersRadius="0dp"
                app:frameCornersSize="0dp"
                app:frameSize="1"
                app:frameThickness="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:maskColor="#77000000" />

            <Button
                android:id="@+id/viewChanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setViewMode"
                android:text="MODE"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />


            <Button
                android:id="@+id/settingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="settingParameter"
                android:text="setting"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                />

<!--            <Button-->
<!--                android:id="@+id/setRFTAG"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:onClick="setRFTag"-->
<!--                android:text="RFsetting"-->
<!--                app:layout_constraintLeft_toRightOf="@+id/settingBtn"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->

<!--                />-->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST"
                android:onClick="testpp"
                app:layout_constraintLeft_toRightOf="@+id/settingBtn"
                app:layout_constraintBottom_toBottomOf="parent"/>



            <LinearLayout
                android:id="@+id/settingSamplingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/settingBtn"
                android:visibility="invisible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="포크 길이:"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/sampling_fork_length_add"
                        android:onClick="settingSampling"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="+"
                        android:textColor="#ffffff"
                        android:padding="0dp"
                        />
                    <Button
                        android:id="@+id/sampling_fork_length_reduce"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:onClick="settingSampling"
                        android:text="-"
                        android:textColor="#ffffff"
                        android:padding="0dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="간격:"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/sampling_fork_gap_add"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="+"
                        android:onClick="settingSampling"
                        android:textColor="#ffffff"
                        android:padding="0dp"
                        />
                    <Button
                        android:id="@+id/sampling_fork_gap_reduce"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="-"
                        android:onClick="settingSampling"
                        android:textColor="#ffffff"
                        android:padding="0dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="두께:"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/sampling_fork_thickness_add"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="+"
                        android:onClick="settingSampling"
                        android:textColor="#ffffff"
                        android:padding="0dp"
                        />
                    <Button
                        android:id="@+id/sampling_fork_thickness_reduce"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="-"
                        android:onClick="settingSampling"
                        android:textColor="#ffffff"
                        android:padding="0dp"
                        />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="부피 샘플링 가로:"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/sampling_volume_width_add"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:onClick="settingSampling"
                        android:text="+"
                        android:textColor="#ffffff"
                        android:padding="0dp"
                        />
                    <Button
                        android:id="@+id/sampling_volume_width_reduce"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="-"
                        android:onClick="settingSampling"
                        android:textColor="#ffffff"
                        android:padding="0dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="세로:"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/sampling_volume_height_add"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="+"
                        android:onClick="settingSampling"
                        android:textColor="#ffffff"
                        android:padding="0dp"
                        />
                    <Button
                        android:id="@+id/sampling_volume_height_reduce"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="-"
                        android:onClick="settingSampling"
                        android:textColor="#ffffff"
                        android:padding="0dp"
                        />


                    <TextView
                        android:id="@+id/fork_sampling_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="distance"
                        android:textColor="#ffffff"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/settingSamplingLayout"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상태: "
                        android:textSize="12dp"
                        android:textColor="#ffffff" />
                    <TextView
                        android:id="@+id/CargoExpect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="샘플링 거리: "
                        android:textSize="12dp"
                        android:textColor="#ffffff" />
                    <TextView
                        android:id="@+id/CargoDepth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOF"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="높이: "
                        android:textSize="12dp"
                        android:textColor="#ffffff" />
                    <TextView
                        android:id="@+id/distanceSensorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="거리센서"
                        android:textSize="12dp"
                        android:textColor="#ffffff"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QR: "
                        android:textSize="12dp"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/qrText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QR 스캔"
                        android:textSize="12dp"
                        android:textColor="#ffffff"
                      />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RFID: "
                        android:textSize="12dp"
                        android:textColor="#ffffff" />
                    <TextView
                        android:id="@+id/cargoAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위치"
                        android:textSize="12dp"
                        android:textColor="#ffffff"
                      />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="작업 공간: "
                        android:textSize="12dp"
                        android:textColor="#ffffff" />
                    <TextView
                        android:id="@+id/workSpace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위치"
                        android:textSize="12dp"
                        android:textColor="#ffffff"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시간: "
                        android:textSize="12dp"
                        android:textColor="#ffffff" />
                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="time"
                        android:textSize="12dp"
                        android:textColor="#ffffff"
                        />
                </LinearLayout>


            </LinearLayout>










        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>